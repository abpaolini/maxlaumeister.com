/* PAGE CONTENT ANIMATION */

#presentText {
    display: table;
    position: absolute;
    box-sizing: border-box;
    top: 0;
    right: 0;
    width: 50vw;
    height: 100%;
    color: white;
    padding: 0 70px;
    opacity: 0;
    filter: alpha(opacity=0);
    -webkit-transition: -webkit-transform 1s ease, opacity 1s ease;
            transition: transform 1s ease, opacity 1s ease;
    -webkit-transform: translate(50px, 0);
        -ms-transform: translate(50px, 0);
            transform: translate(50px, 0);
}

#presentText.presenting {
    opacity: 1;
    filter: alpha(opacity=100);
    -webkit-transform: translate(0, 0);
        -ms-transform: translate(0, 0);
            transform: translate(0, 0);
}

#presentTextInner {
    display: table-cell;
    vertical-align: middle;
}

#presentText h1 {
    font-size: 3.5vw;
}

#presentText p {
    font-size: 1.5vw;
}

#presentText a {
    text-decoration: underline;
    color: white;
}

#iframeWrapper {
    position: absolute;
    top: -10vh;
    left: -6vw;
    width: 70vw;
    height: 120vh;
    -webkit-perspective: 600px;
            perspective: 600px;
    -webkit-perspective-origin: 50% 50%;
            perspective-origin: 50% 50%;
    -webkit-transform-style: preserve-3d;
            transform-style: preserve-3d;
    -webkit-transform: scale(.6, .6);
        -ms-transform: scale(.6, .6);
            transform: scale(.6, .6);
    /*-webkit*/
    -webkit-transition: -webkit-transform 1s ease, opacity 1s ease;
            transition: transform 1s ease, opacity 1s ease;
    opacity: 0;
    filter: alpha(opacity=0);
    pointer-events: none;
}

#iframeWrapper.presenting {
    opacity: 1;
    filter: alpha(opacity=100);
    pointer-events: all;
}

#iframeInner {
    width: 100%;
    height: 100%;
    overflow: hidden;
    -webkit-transition: -webkit-transform 1s ease;
            transition: transform 1s ease;
    -webkit-transform: rotateY(20deg);
            transform: rotateY(20deg);
}

#iframeInner.presenting {
    -webkit-transform: rotateY(7deg);
            transform: rotateY(7deg);
}

.recursiveFrame {
    width: 100%;
    height: 100%;
}

#browserDecoration {
    width: 100%;
    height: 30px;
    background-color: #D4D4D4;
    border-radius: 5px 5px 0 0;
}

#browserURL {
    width: 100%;
    height: 30px;
    background-color: #D4D4D4;
    display: table;
}

#browserURL > div {
    height: 100%;
    display: table-row;
}

#browserURL > div > div {
    display: table-cell;
}

#browserBack {
    height: 20px;
    margin: 5px;
    opacity: 0.7;
    filter: alpha(opacity=70);
}

#browserForward {
    height: 20px;
    margin: 5px;
    opacity: 0.7;
    filter: alpha(opacity=70);
    -webkit-transform: scaleX(-1);
        -ms-transform: scaleX(-1);
            transform: scaleX(-1);
}

#browserForwardBack {
    width: 60px;
}

#browserURLinput {
    width: calc(100% - 20px);
    margin: 5px;
    background-color: white;
}

#bbuttons {
    margin-left: 5px;
}

.bbutton {
    display: inline-block;
    width: 12px;
    height: 12px;
    border-radius: 100%;
    margin: 9px 2px;
    border: solid #ADADAD 1px;
}

.bbutton1 {
    background-color: #FE0000;
}

.bbutton2 {
    background-color: #FED002;
}

.bbutton3 {
    background-color: #7BE706;
}

@keyframes bob {
  from {
    -webkit-transform: translate(0, 0);
            transform: translate(0, 0);
  }

  to {
    -webkit-transform: translate(0, 50px);
            transform: translate(0, 50px);
  }
}

@-webkit-keyframes bob {
  from {
    -webkit-transform: translate(0, 0);
            transform: translate(0, 0);
  }

  to {
    -webkit-transform: translate(0, 20px);
            transform: translate(0, 20px);
  }
}

#downArrow {
    display: block;
    margin: 3em auto;
    height: 6em;
    opacity: 0.5;
    filter: alpha(opacity=50);
    -webkit-transition: all 1s ease;
            transition: all 1s ease;
    -webkit-animation: bob 1s infinite alternate;
    animation: bob 1s infinite alternate;
}

#downArrow.presenting {
    opacity: 0;
    filter: alpha(opacity=0);
}

/* Video.js Player Customizations */

.video-js {
    max-width: 100%;
}

.vjs-default-skin .vjs-big-play-button {
    top:0;
    left:0;
    right:0;
    bottom:0;
    margin:auto;
    width: 3em;
    height: 3em;
    border-radius: 50%;
    background-color: black;
}

.vjs-default-skin .vjs-big-play-button:before {
    line-height: 2.8em;
    left: 0.1em;
}

