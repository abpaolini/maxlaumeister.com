/* Resume Modal CSS */

#resume-modal {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 2000;
}

#resume-frame {
    width: 100%;
    height: 100%;
    border: none;
}

#resume-container {
    position: absolute;
    top: calc(5vmin + 30px);
    right: 5vmin;
    bottom: 5vmin;
    left: 5vmin;
}

#resume-close {
    color: red;
    text-decoration: none;
    font-size: 45px;
    position: absolute;
    left: 5vmin;
    top: 3vmin;
    line-height: 0.5;
    opacity: 1;
    filter: alpha(opacity=100);
    -webkit-transition: opacity 1s;
    transition: opacity 1s;
}

#resume-close.invisible {
    opacity: 0;
    filter: alpha(opacity=0);
}

.noscroll {
    overflow: hidden;
}

#resume-content, #loading {
    position:absolute; left: 0; right: 0; bottom: 0; top: 0px; 
}

.resumeButton {
    position: absolute;
    padding: 1em;
    text-decoration: none;
    box-shadow: 0.2em 0.2em 0.4em black;
    -webkit-transition: background-color 0.1s ease, opacity 1s;
    transition: background-color 0.1s ease, opacity 1s;
}

#downloadButton {
    right: 2em;
    bottom: 1em;
    line-height: 1.5em;
    border-radius: 1em;
    color: white;
    background-color: #285BB8;
    cursor: default;
    box-sizing: content-box;
    text-decoration: none;
}

#downloadButton.clickable {
    cursor: pointer;
}

#downloadButton.clickable:hover {
    background-color: #163B80;
}

#downloadButton img {
    display: inline;
    position: relative;
    top: -0.15em;
    height: 100%;
    vertical-align: middle;
}

#flipper {
    width: 100%;
    height: 100%;
    -webkit-perspective: 1500px;
            perspective: 1500px;
    -webkit-transform-style: preserve-3d;
            transform-style: preserve-3d;
}

#flipper * {
    -webkit-backface-visibility: hidden;
            backface-visibility: hidden;
}

#flipper > .front, #flipper > .back {
    -webkit-transition: -webkit-transform 1s ease;
            transition: transform 1s ease;
    will-change: transform;
    position: absolute;
    overflow: auto;
}

#flipper > .front {
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
}

#flipper > .back {
    -webkit-transform: rotateX(180deg);
            transform: rotateX(180deg);
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
}

#flipper.flipped > .front {
    -webkit-transform: rotateX(-180deg) scale(0.8, 0.8);
            transform: rotateX(-180deg) scale(0.8, 0.8);
}

#flipper.flipped > .back {
    -webkit-transform: rotateX(0deg);
            transform: rotateX(0deg);
}
